<!DOCTYPE html>
<html lang="{{@site.locale}}">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{meta_title}} - {{meta_description}}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Azeret+Mono:wght@100;400;700;800;900&DM+Mono:wght@300;400;500&Work+Sans:wght@300;400;600&family=Roboto&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="{{asset "css/screen.css"}}">
  <link rel="stylesheet" href="{{asset "css/productoversee.css"}}&{{date format="SS"}}">

  {{ghost_head}}
</head>

<body class="{{body_class}} {{#if @custom.social_icons}} with-social-link{{/if}} po-ghost-template is-head-b--a_n{{#match @custom.title_font "=" "serif"}} has-serif-title{{/match}}{{#match @custom.body_font "=" "serif"}} has-serif-body{{/match}}">

<!-- Google Tag Manager (noscript) -->
<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KRH8LC5"
height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
<!-- End Google Tag Manager (noscript) -->
  
  <div class="gh-site">
    
    {{> "productoversee_partials/po_header" }}

    <main id="gh-main" class="gh-main gh-outer{{#match @custom.featured_post_image "true"}} po-featured-image{{/match}}">
      <div class="gh-inner">
        {{{body}}}
      </div>
    </main>

    {{^if @member.paid}}
    <div class="gh-subscribe">
      <div class="gh-outer">
        <section class="gh-subscribe-inner">
          {{^if @member}}
          <h3 class="gh-subscribe-title">Inscreva-se {{@site.title}}</h3>

          <div class="gh-subscribe-description">Textos todas às quartas 7h45 na sua caixa de entrada.</div>

          <a class="gh-subscribe-input" href="#/portal/signup" data-portal="signup">
            <div class="gh-subscribe-input-text">
              {{> icons/email}}
            </div>
            <div class="gh-subscribe-input-btn">Inscreva-se</div>
          </a>
          {{else}}
          <h3 class="gh-subscribe-title">Quer acesso ilimitado?</h3>

          <div class="gh-subscribe-description">Ajude a manter o projeto! Faça um upgrade da sua conta.</div>

          <a class="gh-subscribe-btn gh-btn gh-primary-btn" href="#/portal/account/plans" data-portal="account/plans">Inscreva-se agora</a>
          {{/if}}
        </section>
      </div>
    </div>
    {{/if}}

    {{> "productoversee_partials/po_footer" }}

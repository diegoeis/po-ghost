<!DOCTYPE html>
<html lang="{{@site.locale}}">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{meta_title}}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@300;400;600&family=Roboto&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="{{asset "css/screen.css"}}">

  {{ghost_head}}
</head>

<body class="{{body_class}} po-ghost-template is-head-b--a_n{{#match @custom.title_font "=" "serif"}} has-serif-title{{/match}}{{#match @custom.body_font "=" "serif"}} has-serif-body{{/match}}">
  <div class="gh-site">
    
    {{> "productoversee_partials/header" }}

    <main id="gh-main" class="gh-main gh-outer{{#match @custom.featured_post_image "true"}} po-featured-image{{/match}}">
      <div class="gh-inner">
        {{{body}}}
      </div>
    </main>

    {{^if @member.paid}}
    <div class="gh-subscribe">
      <div class="gh-outer">
        <section class="gh-subscribe-inner">
          {{^if @member}}
          <h3 class="gh-subscribe-title">Inscreva-se {{@site.title}}</h3>

          <div class="gh-subscribe-description">Não os posts exclusivos da nossa Newsletter.</div>

          <a class="gh-subscribe-input" href="#/portal/signup" data-portal="signup">
            <div class="gh-subscribe-input-text">
              {{> icons/email}}
              faleconosco@productoversee.com
            </div>
            <div class="gh-subscribe-input-btn">Inscreva-se</div>
          </a>
          {{else}}
          <h3 class="gh-subscribe-title">Quer acesso ilimitado?</h3>

          <div class="gh-subscribe-description">Upgrade to a paid account to get full access.</div>

          <a class="gh-subscribe-btn gh-btn gh-primary-btn" href="#/portal/account/plans" data-portal="account/plans">Upgrade now</a>
          {{/if}}
        </section>
      </div>
    </div>
    {{/if}}

    <footer class="gh-foot gh-outer">
      <div class="gh-foot-inner gh-inner">
        <div class="gh-copyright">
          {{@site.title}} © {{date format="YYYY"}}
        </div>

        <nav class="gh-foot-menu">
          {{navigation type="secondary"}}
        </nav>

      </div>
    </footer>
  </div>

  {{#is "post, page"}}
  {{> pswp}}
  {{/is}}

  <script src="{{asset "built/main.min.js"}}"></script>

  {{ghost_foot}}
</body>

</html>